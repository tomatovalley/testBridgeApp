<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">

    <EditText
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etContrasena" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etUsuario" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:text="Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etUsuario" android:layout_marginTop="164dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/boton_entrar_login"
            android:id="@+id/btnEntrar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etContrasena" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Nuevo?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEntrar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp"/>
    <TextView
            android:text="REGISTRATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEntrar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="124dp"/>
    <ImageView
            android:layout_width="993dp"
            android:layout_height="561dp" app:srcCompat="@drawable/fondo_abajo"
            android:id="@+id/imageView5" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEntrar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>